<!DOCTYPE html>
<html>
<head>
  <title>StackToldYouSo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <div>
      <h1> StackToldYouSo </h1>
      <% if logged_in? %>
        <span> Welcome, <%= current_user.username %> </span>
        <span><%= link_to 'Post a Question', new_question_path %>
        <span> <%= link_to "Log Out", logout_path %></span>
      <% else %>
        <span><%= link_to "Sign Up", register_path %> </span>
        <span> <%= link_to "Log In", login_path %></span>
      <% end %>
    </div>
  <header>
<%= yield %>

</body>
</html>
